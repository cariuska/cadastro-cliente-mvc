    </div>

    <div class="form-group">
        <b>@Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Cidade)
        </div>
    </div>

    <div class="form-group">
        <b>@Html.LabelFor(model => model.UF, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.UF)
        </div>
    </div>

</div>


<div>
    @Html.ActionLink("Voltar para lista", "Index")
</div>