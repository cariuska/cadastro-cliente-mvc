@model IEnumerable<cadastro_cliente_mvc.Models.Pessoa>
@{
    ViewData["Title"] = "Lista de Pessoas";
}

<h2>Lista de Pessoas</h2>
@Html.ActionLink("Adicionar", "Add")
<table class="table">
    <tr>
        <th>Id</th>
        <th>Tipo Pessoa</th>
        <th>CPF / CNPJ</th>
        <th>Nome / Razão Social</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.pessoaId)</td>

            @if (item.tipoPessoa == "F")
            {
                <td>
                    Física
                </td>
            }
            else
            {
                <td>
                    Jurídica
                </td>
            }

            <td>
                @if (item.tipoPessoa == "F")
                {
                    @Html.DisplayFor(modelItem => item.CPF)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.CNPJ)
                }
            </td>
            <td>
                @if (item.tipoPessoa == "F")
                {
                    @Html.DisplayFor(modelItem => item.Nome)
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.pessoaId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.pessoaId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.pessoaId })
            </td>
        </tr>
    }
</table>
